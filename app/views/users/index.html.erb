<%= render'books/user_info',user: @user %>

<div class="col-md-8 offset-md-1">
 <h2>Users</h2>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
       <tr>
         <td><%= image_tag(@user.get_profile_image(100,100)) %></td>
         <td><%= user.name %></td>
         <td><%= link_to "show", user_path(user.id) %></td>
       </tr>
      <% end %>
    </tbody>
  </table>

   </div>
 </div>
</div>










