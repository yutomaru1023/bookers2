<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 cpl-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
       <ul>
        <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

        <%= form_with model: @user do |f| %>

      <div class="form-group">
        <label for="user_name">Name</label>
         <input class="form-control name"<%= f.text_field :name %>  
      </div>

      <div class="form-group">
        <lagel for="user_image">Image</lagel>
         <input class="form-control-file user_image"<%= f.file_field :profile_image, accept: "image/*" %> 
      </div>

      <div class="form-group">
        <label for="user_introduction">Introduction</label>
         <textarea class="form-control introduction"<%= f.text_area :introduction %>
        
      </div>
           
      <div class="form-group">
        <input class="btn btn-secondary"<%= f.submit 'Update User' %>
      </div>

        <% end %>
    </div>
  </div>
</div>



