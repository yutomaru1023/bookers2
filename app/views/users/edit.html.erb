<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 cpl-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>

        <%= form_with model: @user do |f| %>

      <h5>Name</h5>
        <%= f.text_field :name %>
  
      <h5>Image</h5>
        <%= f.file_field :profile_image, accept: "image/*" %>
  
      <h5>introduction</h5>
        <%= f.text_area :introduction %>
  
        <%= f.submit 'Update User' %>
  
        <% end %>
    </div>
  </div>
</div>



