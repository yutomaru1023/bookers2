<%= render'books/user_info',user: @book.user %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>

<table class="table">
  <tbody>
       <tr>
         <td><%= link_to image_tag(@book.user.get_profile_image(100,100)), user_path(@book.user_id) %><br> <%= link_to @book.user.name, user_path(@book.user_id) %></td>
         <td><%= link_to @book.title, book_path(@book.id) %></td>
         <td><%= @book.body %></td>
         <td><% if @book.user == current_user %>
             <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success"%></td>
         <td>
             <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger"%>
             <% end %>
         </td>
       </tr>
  </tbody>
</table>
</div>